<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">l10n_fr_ecotaxe.sale.line.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="tax_totals" position="after">
                <field name="amount_ecotaxe" class="oe_subtotal_footer_separator" />
            </field>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='tax_id']"
                position="after"
            >
                <field name="subtotal_ecotaxe" />
                <field name="unit_ecotaxe_amount" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='tax_id']"
                position="after"
            >
                <field name="subtotal_ecotaxe" optional="show" />
                <field name="unit_ecotaxe_amount" optional="hide" />
            </xpath>
        </field>
    </record>
</odoo>
