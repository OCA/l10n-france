<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">l10n_fr_ecotaxe.sale.line.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="tax_totals" position="after">
                <field name="amount_ecotaxe" class="oe_subtotal_footer_separator" />
            </field>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='tax_id']"
                position="after"
            >
                <field name="ecotaxe_line_ids" colspan="2">
                    <tree editable="bottom">
                        <field name="ecotaxe_classification_id" />
                        <field name="force_ecotaxe_unit" />
                        <field name="ecotaxe_amount_unit" />
                        <field name="ecotaxe_amount_total" />
                    </tree>
                </field>
                <field name="subtotal_ecotaxe" />
                <field name="ecotaxe_amount_unit" />

            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='tax_id']"
                position="after"
            >
                <field name="subtotal_ecotaxe" optional="show" />
                <field name="ecotaxe_amount_unit" optional="hide" />
                <field name="ecotaxe_line_ids" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
