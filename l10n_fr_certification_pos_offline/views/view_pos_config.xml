<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
        <field name="arch" type="xml">
            <field name="iface_print_auto" position="after">
                <field name="l10n_fr_prevent_print" attrs="{'invisible': ['|', ('l10n_fr_prevent_print_server', '=', 'legacy'), ('l10n_fr_is_accounting_unalterable', '=', False)]}"/>
                <field name="l10n_fr_prevent_print_legacy" attrs="{'invisible': ['|', ('l10n_fr_prevent_print_server', '!=', 'legacy'), ('l10n_fr_is_accounting_unalterable', '=', False)]}"/>
                <field name="l10n_fr_prevent_print_server" invisible="1"/>
                <field name="l10n_fr_is_accounting_unalterable" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
