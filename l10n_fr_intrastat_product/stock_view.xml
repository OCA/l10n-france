<openerp>
<data>

<!-- Add Type of transport on picking form view -->
<record id="fr_intrastat_product_picking_out" model="ir.ui.view">
    <field name="name">fr.intrastat.product.picking.out</field>
    <field name="model">stock.picking</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="stock.view_picking_out_form"/>
    <field name="arch" type="xml">
    <data>
        <field name="backorder_id" position="after">
            <field name="intrastat_transport" />
        </field>
        <field name="company_id" position="after">
            <field name="intrastat_department" />
            <field name="intrastat_type_id" domain="[('object_type', '=', type)]" attrs="{'invisible': [('invoice_state', '!=', 'none')]}" />
        </field>
    </data>
    </field>
</record>

<record id="fr_intrastat_product_picking_in" model="ir.ui.view">
    <field name="name">fr.intrastat.product.picking.in</field>
    <field name="model">stock.picking</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="stock.view_picking_in_form"/>
    <field name="arch" type="xml">
        <field name="backorder_id" position="after">
            <field name="intrastat_transport" />
        </field>
        <field name="company_id" position="after">
            <field name="intrastat_department" />
            <field name="intrastat_type_id" domain="[('object_type', '=', type)]" attrs="{'invisible': [('invoice_state', '!=', 'none')]}" />
        </field>
    </field>
</record>


<!-- Add department on stock location form view -->
<record id="fr_intrastat_product_stock_location_department" model="ir.ui.view">
    <field name="name">fr.intrastat.product.stock.location.department</field>
    <field name="model">stock.location</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="stock.view_location_form" />
    <field name="arch" type="xml">
        <field name="address_id" position="after">
            <field name="intrastat_department" />
        </field>
    </field>
</record>

</data>
</openerp>
