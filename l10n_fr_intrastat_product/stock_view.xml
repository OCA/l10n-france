<openerp>
<data>

<!-- Add Type of transport on picking form view -->
<record id="fr_intrastat_product_picking_out" model="ir.ui.view">
    <field name="name">fr.intrastat.product.picking.out</field>
    <field name="model">stock.picking</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="stock.view_picking_out_form"/>
    <field name="arch" type="xml">
    <data>
        <field name="origin" position="after">
            <field name="intrastat_transport" />
        </field>
        <field name="move_type" position="after">
            <field name="intrastat_department" />
        </field>
    </data>
    </field>
</record>

<record id="fr_intrastat_product_picking_in" model="ir.ui.view">
    <field name="name">fr.intrastat.product.picking.in</field>
    <field name="model">stock.picking</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="stock.view_picking_in_form"/>
    <field name="arch" type="xml">
        <field name="backorder_id" position="after">
                <field name="intrastat_transport" />
                <field name="intrastat_department" />
        </field>
    </field>
</record>


<!-- Add department on warehouse form view -->
<record id="fr_intrastat_product_warehouse_department" model="ir.ui.view">
    <field name="name">fr.intrastat.product.warehouse.department</field>
    <field name="model">stock.warehouse</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="stock.view_warehouse"/>
    <field name="arch" type="xml">
        <field name="partner_address_id" position="after">
            <field name="intrastat_department" />
        </field>
    </field>
</record>

</data>
</openerp>
