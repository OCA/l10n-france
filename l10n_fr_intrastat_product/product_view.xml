<openerp>
<data>

<!-- Add fields on product.template view -->
<record id="product_template_form_view" model="ir.ui.view">
    <field name="name">fr.intrastat.product.template.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="intrastat_product.product_template_form_view" />
    <field name="arch" type="xml">
        <field name="intrastat_id" position="after">
            <field name="country_id" attrs="{'invisible': [('type', '=', 'service')]}"/>
        </field>
    </field>
</record>

<!-- Add field on product.supplierinfo -->
<record id="product_supplierinfo_form_view" model="ir.ui.view">
    <field name="name">fr.intrastat.product.product.supplierinfo.form</field>
    <field name="model">product.supplierinfo</field>
    <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
    <field name="arch" type="xml">
        <field name="product_uom" position="after">
            <field name="origin_country_id" />
        </field>
    </field>
</record>

<!-- Add the field intrastat_label on product UoM -->
<record id="product_uom_form_view" model="ir.ui.view">
    <field name="name">fr.intrastat.product.uom.form</field>
    <field name="model">product.uom</field>
    <field name="inherit_id" ref="product.product_uom_form_view" />
    <field name="arch" type="xml">
        <field name="category_id" position="after">
            <field name="intrastat_label"
                groups="l10n_fr_intrastat_product.group_detailed_intrastat_product"/>
        </field>
    </field>
</record>


<!-- tree view for H.S. code -->
<record id="product_intrastat_code_tree" model="ir.ui.view">
    <field name="name">fr.intrastat.product.intrastat.code.tree</field>
    <field name="model">report.intrastat.code</field>
    <field name="inherit_id" ref="intrastat_product.product_intrastat_code_tree"/>
    <field name="arch" type="xml">
        <field name="name" position="after">
            <field name="intrastat_code" />
            <field name="intrastat_uom_id"
                groups="l10n_fr_intrastat_product.group_detailed_intrastat_product"/>
        </field>
    </field>
</record>

<!-- form view for H.S. code -->
<record id="product_intrastat_code_form" model="ir.ui.view">
    <field name="name">fr.intrastat.product.intrastat.code.form</field>
    <field name="model">report.intrastat.code</field>
    <field name="inherit_id" ref="intrastat_product.product_intrastat_code_form"/>
    <field name="arch" type="xml">
        <group name="main" position="after">
            <group name="deb" string="for DEB">
                <field name="intrastat_code" />
                <field name="intrastat_uom_id" />
            </group>
        </group>
    </field>
</record>

</data>
</openerp>
