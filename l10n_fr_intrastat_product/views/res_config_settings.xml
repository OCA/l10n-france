            <div id="intrastat-settings" position="inside">
                <div class="o_setting_left_pane">
                    <field name="deb_per_invoice" />
                </div>
                <div class="o_setting_right_pane">
                    <div class="row">
                        <label for="deb_per_invoice" class="col-12" />
