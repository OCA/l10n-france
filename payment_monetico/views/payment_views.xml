<odoo>
    <data>

        <record id="acquirer_form_monetico" model="ir.ui.view">
            <field name="name">acquirer.form.monetico</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form" />
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='inside'>
                    <group attrs="{'invisible': [('provider', '!=', 'monetico')]}">
                        <field
                            name="monetico_ept"
                            attrs="{'required':[ ('provider', '=', 'monetico'), ('state', '!=', 'disabled')]}"
                        />
                        <field
                            name="monetico_company_code"
                            attrs="{'required':[ ('provider', '=', 'monetico'), ('state', '!=', 'disabled')]}"
                        />
                        <field
                            name="monetico_secret"
                            attrs="{'required':[ ('provider', '=', 'monetico'), ('state', '!=', 'disabled')]}"
                        />
                        <field
                            name="monetico_test_url"
                            attrs="{'required':[ ('provider', '=', 'monetico'), ('state', '!=', 'disabled')]}"
                            groups='base.group_no_one'
                        />
                        <field
                            name="monetico_prod_url"
                            attrs="{'required':[ ('provider', '=', 'monetico'), ('state', '!=', 'disabled')]}"
                            groups='base.group_no_one'
                        />
                        <field
                            name="monetico_version"
                            attrs="{'required':[ ('provider', '=', 'monetico'), ('state', '!=', 'disabled')]}"
                        />
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
