<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--  Add the APE (main activity) -->
    <record model="ir.ui.view" id="view_partner_add">
        <field name="name">res.partner.form.ape</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_eu_nace.res_partner_form_view" />
        <field name="arch" type="xml">
            <field name="nace_id" position="after">
                <field name="ape_id" context="{'nace_display': 'short'}"
                    attrs="{'invisible': [('is_company', '=', False)]}"
                    options='{"always_reload": True}'/>
            </field>
        </field>
    </record>

</odoo>
