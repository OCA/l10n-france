<?xml version="1.0" ?>
<openerp>
    <data>


        <menuitem name="Import Bank Statement" id="account_bank_statement_import_menu" parent="account.menu_finance_entries" action="account_bank_statement_import.action_account_bank_statement_import" sequence="10000"/>

        <record id="respartnerbaliseform" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <group name="accounting_entries" position="after">
                    <group string="Bank Statement" name="bankstatement" >
                        <field name="balise_ids" nolabel="1">
                                <tree string="Balise Lines" editable="bottom">
                                    <field name="balise_id" context="{'partner_id': parent.partner_id}"/>
                                </tree>
                        </field>
                    </group>
                </group>
            </field>
        </record>

        <record id="action_res_partner_bank_balise_2" model="ir.actions.act_window">
            <field name="name">Bank balise</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.bankbalise</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>

        </record>


        <record id="res_partner_bank_balise_search" model="ir.ui.view">
            <field name="name">res.partner.bankbalise.search</field>
            <field name="model">res.partner.bankbalise</field>
            <field name="arch" type="xml">
                <search string="Partner Balise">
                    <field name="partner_id"/>
                    <field name="balise_id" string="Balise"/>
                </search>
            </field>
        </record>

        <record id="res_partner_bank_balise_tree" model="ir.ui.view">
            <field name="name">res.partner.bankbalise.tree</field>
            <field name="model">res.partner.bankbalise</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Partner Balise" create="true" editable="top">
                    <field name="partner_id"/>
                    <field name="balise_id"/>
                </tree>
            </field>
        </record>

        <record id="action_account_bank_statement" model="ir.actions.act_window">
                <field name="name">Bank Statements</field>
                <field name="res_model">account.bank.statement</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form,pivot,graph</field>

        </record>


        <record id="view_bank_statement_line_search_2" model="ir.ui.view">
            <field name="name">account.bank.statement.line.search2</field>
            <field name="model">account.bank.statement.line</field>
            <field name="inherit_id" ref="account.view_bank_statement_line_search" />
            <field name="arch" type="xml">
                  <xpath  expr="//field[@name='partner_id']"  position="after">
                    <field name="amount" string="Amount"/>
                  </xpath>
            </field>
        </record>


        <record id="action_bank_statement_line_2" model="ir.actions.act_window">
            <field name="name">Bank Statement Lines</field>
            <field name="res_model">account.bank.statement.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <!--<field name="search_view_id" ref="account.view_bank_statement_line_search"/>-->
            <field name="help" type="html">
              <p>
                A bank statement line is a financial transaction on a bank account.
              </p><p>
                Odoo allows you to reconcile a statement line directly with
                the related sale or puchase invoice(s).
              </p>
            </field>
        </record>



        <menuitem name="Bank Statement"
        id="account_bank_statement_menu"
        parent="account.menu_finance_entries"
        action="action_account_bank_statement"
        sequence="1900"/>

        <menuitem name="Bank Partner Balise"
        id="action_res_partner_bank_balise_menu"
        parent="account.menu_finance_entries"
        action="action_res_partner_bank_balise_2"
        sequence="2200"/>


        <menuitem name="Bank Statement Lines"
        id="action_bank_statement_line_menu"
        parent="account.menu_finance_entries"
        action="action_bank_statement_line_2"
        sequence="2000"/>



    </data>
</openerp>
