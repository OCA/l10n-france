<odoo>

    <record id="view_company_form" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">

            <notebook position="inside">
                <page name="factor" string="Factor">
                    <group name="factoring" groups="account.group_account_invoice">
                        <group name="config_facto" string="Configuration">
                            <field name="factor_config_currency_id" />
                            <field name="bpce_factor_code" placeholder="001234" />
                            <field name="bpce_start_date" />
                            <button
                                type="object"
                                name="ui_configure_bpce_factoring_balance"
                                string="Configure BPCE journals and accounts"
                            />
                            <span />
                        </group>
                    </group>
                </page>
            </notebook>

        </field>
    </record>

</odoo>
