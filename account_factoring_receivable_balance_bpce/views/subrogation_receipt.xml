<odoo>

    <record model="ir.actions.server" id="action_bpce_subrogation_receipt">
        <field name="name">⚙️ BPCE Subrogation Receipts</field>
        <field name="model_id" ref="model_subrogation_receipt"/>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_manager'))]"/>
        <field name="code">
env[model._name]._create_or_update_subrogation_receipt(
    factor_type="bpce", partner_field="bpce_factoring_balance")
        </field>
    </record>

    <menuitem id="menu_action_bpce_subrogation_receipt" 
        parent="base_factoring.factoring_menu" sequence="30"
        action="action_bpce_subrogation_receipt" />

</odoo>
