<odoo>

    <record id="subrogation_receipt_form" model="ir.ui.view">
        <field name="model">subrogation.receipt</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_compute_lines"
                        id="action_compute_lines_highlighted"
                        type="object"
                        string="Compute"
                        invisible="not(state == 'draft' and not line_ids)"
                        class="oe_highlight"
                    />
                    <button
                        name="action_compute_lines"
                        id="action_compute_lines"
                        type="object"
                        string="Compute"
                        invisible="not(state == 'draft' and line_ids)"
                    />
                    <button
                        name="action_confirm"
                        type="object"
                        string="Confirm"
                        invisible="not(state =='draft' and line_ids)"
                        class="oe_highlight"
                    />
                    <button
                        name="action_post"
                        type="object"
                        string="Post"
                        invisible="not(state == 'confirmed')"
                        class="oe_highlight"
                    />
                    <!-- TODO: view items is now a smart button;
                    repurpose to show Factoring JEs generated
                    <button
                        name="action_goto_moves"
                        type="object"
                        invisible="not line_ids"
                        string="See account moves"
                    />
                    -->
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button
                            class="oe_stat_button"
                            type="action"
                            name="%(action_account_move_subrogation)d"
                            context="{'search_default_subrogation_id': id}"
                            icon="fa-book"
                        >
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Journal Entries</span>
                                </div>
                        </button>
                    </div>
                    <div class="oe_title" name="journal">
                        <h2>
                            <label name="Journal" for="factor_journal_id" />
                            <field
                                name="factor_journal_id"
                                readonly="state != 'draft'"
                            />
                        </h2>
                    </div>
                    <group name="main" colspan="2" readonly="state != 'draft'">
                        <group name="left" invisible="not factor_journal_id">
                            <field name="factor_type" />
                            <field name="target_date" />
                            <field name="statement_date" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field name="company_id" invisible="1" />
                            <field name="currency_id" invisible="1" />
                        </group>
                        <group name="right" invisible="state == 'draft'">
                            <field name="date" invisible="not date" />
                            <field
                                name="balance"
                                widget="monetary"
                                options="{'currency_field': 'currency_id', 'field_digits': True}"
                            />
                            <field name="holdback_amount" />
                            <separator string="Expenses" colspan="2" />
                            <field
                                name="expense_untaxed_amount"
                                string="Untaxed Amount"
                            />
                            <field name="expense_tax_amount" string="Tax Amount" />
                        </group>
                        <group colspan="4">
                            <separator
                                string="Comment"
                                invisible="comment != ''"
                                colspan="4"
                            />
                            <field name="comment" nolabel="1" colspan="4" />
                        </group>
                    </group>

                    <notebook>
                        <page name="lines" string="Lines">>

                        <field name="line_ids" colspan="4" readonly="state != 'draft'">
                            <tree>
                                <field name="id" optional="hide" />
                                <field name="create_date" optional="hide" />
                                <field name="date" optional="show" />
                                <field
                                        name="journal_id"
                                        options="{&quot;no_open&quot;:True}"
                                    />
                                <field name="partner_id" optional="show" />
                                <field name="partner_ref" optional="show" />
                                <field name="statement_id" invisible="1" />
                                <field name="ref" optional="show" />
                                <field name="name" optional="show" />
                                <field
                                        name="tax_ids"
                                        widget="many2many_tags"
                                        width="0.5"
                                        optional="hide"
                                    />
                                <field name="debit" sum="Total Debit" />
                                <field name="credit" sum="Total Credit" />
                                <field
                                        name="amount_currency"
                                        groups="base.group_multi_currency"
                                        optional="show"
                                        string="In currency"
                                    />
                                <field name="move_id" optional="show" />
                                <field name="bank_id" optional="show" />
                                <field name="full_reconcile_id" optional="hide" />
                                <field
                                        name="account_id"
                                        optional="hide"
                                        groups="account.group_account_readonly"
                                    />
                                <field
                                        name="currency_id"
                                        readonly="1"
                                        groups="base.group_multi_currency"
                                        optional="hide"
                                        string="Original Currency"
                                    />
                                <field
                                        name="tax_tag_ids"
                                        widget="many2many_tags"
                                        width="0.5"
                                        optional="hide"
                                    />
                                <field name="date_maturity" optional="hide" />
                                <field name="company_currency_id" invisible="1" />
                                <field name="parent_state" invisible="1" />
                            </tree>
                        </field>

                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field
                        name="message_ids"
                        widget="mail_thread"
                        options="{'post_refresh': 'recipients'}"
                    />
                </div>
            </form>
        </field>
    </record>


    <record id='subrogation_receipt_tree' model='ir.ui.view'>
        <field name='model'>subrogation.receipt</field>
        <field name='arch' type='xml'>
            <tree>
                <field name="factor_journal_id" />
                <field name="target_date" />
                <field name="date" />
                <field name="balance" />
                <field name="expense_untaxed_amount" />
                <field name="expense_tax_amount" />
                <field name="holdback_amount" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="subrogation_receipt_search" model="ir.ui.view">
        <field name="model">subrogation.receipt</field>
        <field name="arch" type="xml">
            <search>
                <filter name="factor_journal_id" />
                <filter name="expense_untaxed_amount" />
                <filter name="expense_tax_amount" />
                <filter name="holdback_amount" />
                <filter name="state" />
            </search>
        </field>
    </record>

    <record id="subrogation_receipt_action" model="ir.actions.act_window">
        <field name="name">Subrogation Receipts</field>
        <field name="res_model">subrogation.receipt</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="subrogation_receipt_action_redirection" model="ir.actions.act_window">
        <field name="name">Created Subrogation Receipts</field>
        <field name="res_model">subrogation.receipt</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem
        id="subrogation_receipt_menu"
        parent="factoring_menu"
        action="subrogation_receipt_action"
    />

</odoo>
