<odoo>

<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">chorus.account.res.settings.form</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form" />
    <field name="arch" type="xml">
        <div id="recommended_apps" position="after">
            <h2>Chorus Pro</h2>
            <div class="row mt16 o_settings_container" id="fr-chorus">
                <div class="col-xs-12 col-md-12 o_setting_box">
                    <div class="o_setting_left_pane" id="fr-chorus-api">
                        <field name="group_chorus_api"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_chorus_api" string="Chorus Pro API"/>
                        <div class="text-muted">
                            Send electronic invoices to the French administration directly from Odoo via the Chorus Pro API
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-12 o_setting_box" id="fr-chorus-api-params" attrs="{'invisible': [('group_chorus_api', '=', False)]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <div class="row">
                            <label for="fr_chorus_invoice_format" class="col-md-5 o_light_label"/>
                            <field name="fr_chorus_invoice_format"/>
                        </div>
                        <div class="row">
                            <label for="fr_chorus_check_commitment_number" class="col-md-5 o_light_label"/>
                            <field name="fr_chorus_check_commitment_number"/>
                        </div>
                        <div class="row">
                            <label for="fr_chorus_api_login" class="col-md-5 o_light_label"/>
                            <field name="fr_chorus_api_login"/>
                        </div>
                        <div class="row">
                            <label for="fr_chorus_api_password" class="col-md-5 o_light_label"/>
                            <field name="fr_chorus_api_password" password="1"/>
                        </div>
                        <div class="row">
                            <label for="fr_chorus_pwd_expiry_date" class="col-md-5 o_light_label"/>
                            <field name="fr_chorus_pwd_expiry_date"/>
                        </div>
                        <div class="row">
                            <label for="fr_chorus_expiry_remind_user_ids" class="col-md-5 o_light_label"/>
                            <field name="fr_chorus_expiry_remind_user_ids" widget="many2many_tags"/>
                        </div>
                        <div class="row">
                            <label for="fr_chorus_qualif" class="col-md-5 o_light_label"/>
                            <field name="fr_chorus_qualif"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </field>
</record>


</odoo>
