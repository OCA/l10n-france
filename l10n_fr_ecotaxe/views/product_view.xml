<odoo>
    <record id="product_template_form_ecotaxe_view" model="ir.ui.view">
        <field name="name">product.template.form.ecotaxe.inherit</field>
        <field name="model">product.template</field>
        <field name="priority">5</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing']" position="after">
                <field name="ecotaxe_classification_id" />
                <field
                    name="ecotaxe_amount"
                    widget="monetary"
                    options="{'currency_field': 'currency_id', 'field_digits': True}"
                />
                <label
                    for="manual_fixed_ecotaxe"
                    string="Ecotaxe classification"
                    class="oe_edit_only"
                />
                <field
                    name="manual_fixed_ecotaxe"
                    class="oe_edit_only"
                    nolabel="1"
                    widget="monetary"
                    options="{'currency_field': 'currency_id', 'field_digits': True}"
                />
            </xpath>
        </field>
    </record>

</odoo>
