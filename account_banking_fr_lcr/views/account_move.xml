<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account_payment_order.view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_payment_order.view_move_form" />
        <field name="arch" type="xml">
            <button name="action_register_payment" position="before">
                <button
                    name="fr_lcr_print"
                    type="object"
                    string="Print Bill of Exchange"
                    attrs="{'invisible': ['|', '|', '|', ('payment_mode_fr_lcr_type', '!=', 'accepted'), ('state', '!=', 'posted'), ('payment_state', 'not in', ('partial', 'not_paid')), ('move_type', '!=', 'out_invoice')]}"
                />
            </button>
            <field name="show_reset_to_draft_button" position="after">
                    <field name="payment_mode_fr_lcr_type" invisible="1" />
            </field>
            <field name="payment_mode_id" position="after">
                <field
                    name="fr_lcr_partner_bank_id"
                    attrs="{'invisible': ['|', ('payment_method_code', '!=', 'fr_lcr'), ('move_type', '!=', 'out_invoice')]}"
                />
            </field>
        </field>
    </record>
</odoo>
