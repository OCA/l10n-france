<odoo>

    <record id="account_payment_mode_form" model="ir.ui.view">
        <field name="name">fr_lcr.account.payment.mode.form</field>
        <field name="model">account.payment.mode</field>
        <field
            name="inherit_id"
            ref="account_payment_order.account_payment_mode_form"
        />
        <field name="arch" type="xml">
            <group name="payment_order_options" position="inside">
                <field
                    name="fr_lcr_type"
                    attrs="{'required': [('payment_method_code', '=', 'fr_lcr')], 'invisible': [('payment_method_code', '!=', 'fr_lcr')]}"
                />
            </group>
        </field>
    </record>

</odoo>
