<odoo>
    <record id="account_payment_order_form" model="ir.ui.view">
        <field name="name">pain.base.account.payment.order.form</field>
        <field name="model">account.payment.order</field>
        <field
            name="inherit_id"
            ref="account_payment_order.account_payment_order_form"
        />
        <field name="arch" type="xml">
            <field name="company_partner_bank_id" position="after">
                    <field
                    name="fr_lcr_collection_option"
                    attrs="{'invisible': [('payment_method_code', '!=', 'fr_lcr')]}"
                />
                    <field
                    name="fr_lcr_value_date"
                    attrs="{'invisible': ['|', ('payment_method_code', '!=', 'fr_lcr'), ('fr_lcr_collection_option', 'not in', ('cash_discount', 'value_cash_discount'))]}"
                />
                    <field name="fr_lcr_dailly" invisible="1" />
                    <field
                    name="fr_lcr_dailly_option"
                    attrs="{'invisible': ['|', ('payment_method_code', '!=', 'fr_lcr'), ('fr_lcr_dailly', '=', False)]}"
                />
            </field>
        </field>
</record>

</odoo>
