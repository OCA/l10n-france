<odoo>


<record id="view_account_config_settings" model="ir.ui.view">
    <field name="name">das2.res.config.settings.form</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@id='recommended_apps']" position="after">
            <h2>Intrastat</h2>
            <div class="row mt16 o_settings_container" id="das2">
                <div class="col-xs-12 col-md-12 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <div class="row">
                            <label for="fr_das2_partner_declare_threshold" class="col-md-5 o_light_label"/>
                            <field name="fr_das2_partner_declare_threshold"/>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
</record>


</odoo>
